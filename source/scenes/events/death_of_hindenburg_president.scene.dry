on-arrival: {!
// 1. coordination between the right/far-right
if (Q.Hitler_votes && Q.Seldte_votes) {
    if (Q.Hitler_votes > Q.Seldte_votes) {
        Q.AP_candidate = "Hitler";
        Q.other_candidate = "Hitler";
        Q.Hitler_bonus = (Q.Hitler_bonus || 0) - 0.25*Q.other_votes;
        if (Q.AR_candidate == "Adenauer") {
            Q.Adenauer_bonus = (Q.Adenauer_bonus || 0) + 0.25*Q.other_votes;
        }
    } else {
        Q.JONS_candidate = "Seldte";
    }
} else if (Q.Goring_votes && Q.Seldte_votes) {
    if (Q.Goring_votes > Q.Seldte_votes) {
        Q.AP_candidate = "Göring";
        Q.other_candidate = "Göring";
    } else {
        Q.JONS_candidate = "Seldte";
    }
}
// 2. If Adenauer & Gessler are both running and neither are part of the PSOE coalition, the smaller of these drops out.
Q.adenauer_drops_out = 0;
Q.gessler_drops_out = 0;
if (Q.AR_candidate == "Adenauer" && (Q.PRR_candidate == "Gessler" || Q.DLR_candidate == "Gessler") && Q.AR_candidate != Q.PSOE_candidate && (Q.PRR_candidate != Q.PSOE_candidate || Q.DLR_candidate != Q.PSOE_candidate)) {
    if (Q.Adenauer_votes > Q.Gessler_votes) {
        Q.gessler_drops_out = 1;
        if (Q.PRR_candidate != Q.PSOE_candidate) {
            Q.PRR_candidate = "Adenauer";
        }
        if (Q.DLR_candidate != Q.PSOE_candidate) {
            Q.DLR_candidate = "Adenauer";
        }
        Q.Adenauer_bonus = (Q.Adenauer_bonus || 0) + 0.25*Q.other_votes;
    } else {
        Q.adenauer_drops_out = 1;
        Q.AR_candidate = "Gessler";
        Q.Gessler_bonus = 0.25*Q.other_votes;
    }
    if (Q.JONS_candidate == 'Seldte') {
        Q.Seldte_bonus = (Q.Seldte_bonus || 0) - 0.25*Q.other_votes;
    } else if (Q.JONS_candidate == "Hitler") {
        Q.Hitler_bonus = (Q.Hitler_bonus || 0) - 0.25*Q.other_votes;
    }
}
// DLR drops out to favor the center candidate
if (Q.DLR_candidate != Q.PSOE_candidate && Q.DLR_candidate != Q.PRR_candidate && Q.DLR_candidate != Q.AR_candidate) {
}
